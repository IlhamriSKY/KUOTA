{
  "name": "kuota",
  "version": "1.0.0",
  "description": "Monitor GitHub Copilot and Claude Code usage across multiple accounts",
  "module": "src/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run build && bun run src/index.js",
    "dev": "bun run build:dev && bun --hot run src/index.js",
    "build": "bun run build:assets && bun run build:icons && bun run build:css",
    "build:dev": "bun run build:assets && bun run build:css",
    "build:css": "bunx tailwindcss -i src/styles/globals.css -o public/css/styles.css --minify",
    "build:css:watch": "bunx tailwindcss -i src/styles/globals.css -o public/css/styles.css --watch",
    "build:assets": "bun run scripts/copy-assets.js",
    "build:icons": "bun run scripts/generate-icons.js",
    "build:exe": "bun run scripts/build-exe.js",
    "build:exe:fresh": "bun run scripts/build-exe.js --fresh",
    "desktop": "bun run build:dev && bun run src/desktop.js",
    "db:generate": "bunx drizzle-kit generate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "postinstall": "bun run scripts/copy-assets.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.9",
    "rcedit": "^5.0.2",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "htmx.org": "^2.0.8",
    "lucide-static": "^0.563.0",
    "mysql2": "^3.16.3",
    "tailwindcss": "3",
    "webview-bun": "^2.4.0"
  }
}
